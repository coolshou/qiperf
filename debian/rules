#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1


# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed
QIPERF_VERSION = 0.1
QIPERFD_VERSION = 0.1.202305.29
QIPERFC_VERSION = 0.1.202305.29
QIPERFTRAY_VERSION = 0.1.202305.29

%:
	dh $@


# dh_make generated override targets
# This is example for Cmake (See https://bugs.debian.org/641051 )
#override_dh_auto_configure:
#	dh_auto_configure -- \
#	-DCMAKE_LIBRARY_PATH=$(DEB_HOST_MULTIARCH)

override_dh_gencontrol:
	#dh_gencontrol
	dh_gencontrol -pqiperfd -- -v$(QIPERFD_VERSION) -cdebian/qiperfd.control
	dh_gencontrol -pqiperftray -- -v$(QIPERFC_VERSION) -cdebian/qiperftray.control
	dh_gencontrol -pqiperfc -- -v$(QIPERFTRAY_VERSION) -cdebian/qiperfc.control
	#dh_gencontrol -- -pqiperftray -cdebian/qiperftray.control -ldebian/qiperftray.changelog -Vdist:Depends="qiperfd"
	#dh_gencontrol -- -pqiperfc -cdebian/qiperfc.control -ldebian/qiperfc.changelog	

override_dh_builddeb:
	dh_builddeb -pqiperfd
	dh_builddeb -pqiperftray
	dh_builddeb -pqiperfc
